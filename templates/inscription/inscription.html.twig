{% extends 'base.html.twig' %}

{% block title %}Register
{% endblock %}

{% block body %}
	<div class="container mt-5">
		<div class="row">
			<div class="col-md-6 offset-md-3">
				<div class="card">
					<div class="card-header">
						<h1 class="text-center">Register</h1>
					</div>
					<div class="card-body">
						{{ form_errors(inscriptionForm) }}

						{{ form_start(inscriptionForm, {'attr': {'class': 'form-horizontal'}}) }}

						<div class="mb-3">
							{{ form_row(inscriptionForm.nom, {'attr': {'class': 'form-control'}}) }}
						</div>

						<div class="mb-3">
							{{ form_row(inscriptionForm.prenom, {'attr': {'class': 'form-control'}}) }}
						</div>

						<div class="mb-3">
							{{ form_row(inscriptionForm.age, {'attr': {'class': 'form-control'}}) }}
						</div>

                        <div class="mb-3">
							{{ form_row(inscriptionForm.telephone, {'attr': {'class': 'form-control'}}) }}
						</div>

                        <div class="mb-3">
							{{ form_row(inscriptionForm.adresse, {'attr': {'class': 'form-control'}}) }}
						</div>

						<div class="mb-3">
							{{ form_row(inscriptionForm.email, {'attr': {'class': 'form-control'}}) }}
						</div>

						<div class="mb-3">
							{{ form_row(inscriptionForm.plainPassword, {
                            'attr': {'class': 'form-control'},
                            'label': 'Password'
                        }) }}
						</div>

						<div class="mb-3">
							{{ form_row(inscriptionForm.agreeTerms, {'attr': {'class': 'form-check-input'}}) }}
							<label for="{{ inscriptionForm.agreeTerms.vars.id }}" class="form-check-label">
								
							</label>
						</div>

						<div class="text-center">
							<button type="submit" class="btn btn-primary">Register</button>
						</div>

						{{ form_end(inscriptionForm) }}
					</div>
				</div>
			</div>
		</div>
	</div>
{% endblock %}